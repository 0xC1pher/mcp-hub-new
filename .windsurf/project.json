{
  "name": "MCP Hub Enhanced",
  "version": "3.0.0",
  "description": "Advanced MCP system with cutting-edge retrieval and context processing features",
  "type": "python",
  "python": {
    "interpreter": "python",
    "version": ">=3.8",
    "requirements": [
      "numpy>=1.21.0",
      "msgpack>=1.0.5",
      "zstandard>=0.19.0",
      "asyncio",
      "dataclasses",
      "typing-extensions",
      "pathlib"
    ],
    "pythonPath": ".",
    "modules": [
      "core.advanced_features",
      "core.memory_context",
      "core.intelligent_cache",
      "core.context_query",
      "core.shared"
    ],
    "testFramework": "pytest"
  },
  "mcp": {
    "enabled": true,
    "version": "3.0",
    "server_path": "core/advanced_features",
    "config_path": "config/mcp_config.json",
    "auto_start": true,
    "debug_mode": false,
    "server_type": "enhanced"
  },
  "advanced_features": {
    "dynamic_chunking": {
      "enabled": true,
      "min_chunk_size": 200,
      "max_chunk_size": 1000,
      "overlap_ratio": 0.15,
      "complexity_threshold": 0.7
    },
    "multi_vector_retrieval": {
      "enabled": true,
      "vector_types": ["semantic", "keyword", "contextual"],
      "fusion_strategy": "weighted_sum",
      "max_results": 10
    },
    "virtual_chunks": {
      "enabled": false,
      "storage_path": "vector_storage.mp4",
      "note": "Requires additional setup - enable after configuration"
    },
    "query_expansion": {
      "enabled": true,
      "max_expansions": 8,
      "strategies": ["semantic", "statistical", "contextual"]
    },
    "confidence_calibration": {
      "enabled": true,
      "methods": ["platt_scaling", "temperature", "histogram"],
      "window_size": 1000
    }
  },
  "workspace": {
    "folders": [
      {
        "name": "Advanced Features",
        "path": "./core/advanced_features"
      },
      {
        "name": "Core Systems",
        "path": "./core"
      },
      {
        "name": "Configuration",
        "path": "./config"
      },
      {
        "name": "Documentation",
        "path": "./docs"
      }
    ]
  },
  "development": {
    "hot_reload": true,
    "auto_format": true,
    "lint_on_save": true,
    "type_checking": true
  },
  "commands": [
    {
      "name": "Start Advanced Features Demo",
      "command": "python -m core.advanced_features.integrated_demo",
      "description": "Run comprehensive demo of all advanced features",
      "shortcut": "Ctrl+Shift+D"
    },
    {
      "name": "Test System Health",
      "command": "python -c \"from core.advanced_features import create_orchestrator; print('âœ… System Health:', 'OK' if create_orchestrator('fast') else 'ERROR')\"",
      "description": "Quick system health check",
      "shortcut": "Ctrl+Shift+H"
    },
    {
      "name": "Monitor Performance",
      "command": "python -c \"from core.advanced_features import create_orchestrator; import json; o = create_orchestrator('balanced'); print(json.dumps(o.get_system_status(), indent=2))\"",
      "description": "Display system performance metrics",
      "shortcut": "Ctrl+Shift+M"
    }
  ],
  "ai_features": {
    "context_awareness": {
      "enabled": true,
      "use_advanced_chunking": true,
      "use_query_expansion": true,
      "confidence_threshold": 0.7
    },
    "code_understanding": {
      "enabled": true,
      "structural_analysis": true,
      "semantic_search": true
    },
    "documentation_integration": {
      "enabled": true,
      "auto_index": true,
      "smart_retrieval": true
    }
  },
  "logging": {
    "level": "INFO",
    "format": "ðŸŒŠ [Windsurf-MCP] %(asctime)s - %(levelname)s - %(message)s",
    "file": "logs/windsurf_mcp.log",
    "console": true
  },
  "performance": {
    "max_concurrent_operations": 4,
    "cache_size_mb": 100,
    "processing_timeout": 30,
    "memory_limit_mb": 500
  },
  "integrations": {
    "chat_interface": {
      "enabled": true,
      "auto_suggestions": true,
      "context_preservation": true
    },
    "file_watchers": {
      "enabled": true,
      "patterns": ["*.py", "*.md", "*.json"],
      "auto_reindex": true
    }
  },
  "shortcuts": {
    "quick_search": "Ctrl+Shift+F",
    "expand_query": "Ctrl+Shift+E",
    "show_chunks": "Ctrl+Shift+C",
    "system_status": "Ctrl+Shift+S"
  }
}
